---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title} - Admin</title>
        <script is:inline>
            (() => {
                const stored = localStorage.getItem("theme");
                const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
                const theme = stored || (prefersDark ? "dark" : "light");
                document.documentElement.dataset.theme = theme;
            })();
        </script>
    </head>
    <body class="min-h-screen antialiased">
        <a href="#admin-main" class="skip-link">Pular para o conte√∫do principal</a>
        <div class="md:flex min-h-screen">
            <aside
                id="admin-sidebar"
                class="surface w-full md:w-64 p-6 flex flex-col md:relative md:translate-x-0 md:shadow-none shadow-lg fixed top-16 left-0 md:top-0 md:left-0 md:flex md:min-h-screen transition-transform hidden md:block"
            >
                <h2 class="text-xl font-bold mb-8">GabrielFS Admin</h2>
                <nav class="flex-1 space-y-2 text-sm">
                    <a
                        href="/admin/dashboard"
                        class="block py-2 px-4 rounded hover:bg-[color:var(--surface-2)] transition"
                        >Dashboard</a
                    >
                    <a
                        href="/admin/experiences"
                        class="block py-2 px-4 rounded hover:bg-[color:var(--surface-2)] transition"
                        >Experi√™ncias</a
                    >
                    <a
                        href="/admin/certifications"
                        class="block py-2 px-4 rounded hover:bg-[color:var(--surface-2)] transition"
                        >Certifica√ß√µes</a
                    >
                    <a
                        href="/admin/content"
                        class="block py-2 px-4 rounded hover:bg-[color:var(--surface-2)] transition"
                        >Textos</a
                    >
                    <a
                        href="/admin/password"
                        class="block py-2 px-4 rounded hover:bg-[color:var(--surface-2)] transition"
                        >Senha</a
                    >
                </nav>
                <form action="/admin/logout" method="POST">
                    <button
                        class="w-full text-left py-2 px-4 text-red-500 hover:bg-[color:var(--surface-2)] rounded transition"
                        >Sair</button
                    >
                </form>
            </aside>

            <div class="flex-1 flex flex-col">
                <header class="glass border-b border-[color:var(--border)] h-16 flex items-center px-4 sm:px-6 justify-between sticky top-0 z-40">
                    <div class="flex items-center gap-3">
                        <button
                            id="admin-menu-toggle"
                            class="md:hidden btn btn-ghost h-10 w-10 p-2"
                            aria-label="Abrir menu"
                            aria-expanded="false"
                            aria-controls="admin-sidebar"
                        >
                            ‚ò∞
                        </button>
                        <h1 class="text-lg font-semibold">{title}</h1>
                    </div>
                    <button
                        id="admin-theme-toggle"
                        class="btn btn-ghost h-10 w-10 p-2"
                        aria-label="Alternar tema"
                        aria-pressed="false"
                    >
                        <span id="admin-theme-icon" aria-hidden="true">‚òÄÔ∏è</span>
                    </button>
                </header>
                <main id="admin-main" class="flex-1 p-4 sm:p-8 overflow-y-auto">
                    <slot />
                </main>
            </div>
        </div>

        <div
            id="auth-modal"
            class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-50 hidden"
            role="dialog"
            aria-modal="true"
            aria-labelledby="auth-modal-title"
        >
            <div class="bg-slate-900 border border-slate-700 rounded-lg shadow-xl w-full max-w-md p-6 space-y-4">
                <div class="flex items-start justify-between gap-3">
                    <div>
                        <h2 id="auth-modal-title" class="text-lg font-semibold">Confirme para continuar</h2>
                        <p class="text-sm text-slate-400">Digite a senha do painel para autorizar esta a√ß√£o.</p>
                    </div>
                    <button id="auth-modal-close" class="btn btn-ghost">‚úï</button>
                </div>

                <div class="space-y-3">
                    <div>
                        <label class="block text-sm font-medium mb-1" for="auth-password">Senha</label>
                        <input
                            id="auth-password"
                            name="password"
                            type="password"
                            autocomplete="current-password"
                            inputmode="text"
                            class="w-full surface rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[color:var(--accent)]"
                        />
                    </div>
                    <div id="auth-totp-wrapper" class="hidden">
                        <label class="block text-sm font-medium mb-1" for="auth-code">C√≥digo 2FA</label>
                        <input
                            id="auth-code"
                            type="text"
                            inputmode="numeric"
                            pattern="[0-9]{6}"
                            autocomplete="one-time-code"
                            class="w-full surface rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[color:var(--accent)]"
                        />
                        <p class="text-xs text-slate-500 mt-1">Use o c√≥digo do seu aplicativo autenticador.</p>
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-2">
                    <button id="auth-cancel" class="btn btn-ghost">Cancelar</button>
                    <button id="auth-confirm" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>

        <script is:inline>
            (() => {
                const html = document.documentElement;
                const themeBtn = document.getElementById("admin-theme-toggle");
                const themeIcon = document.getElementById("admin-theme-icon");
                const menuBtn = document.getElementById("admin-menu-toggle");
                const sidebar = document.getElementById("admin-sidebar");
                const modal = document.getElementById("auth-modal");
                const modalClose = document.getElementById("auth-modal-close");
                const modalCancel = document.getElementById("auth-cancel");
                const modalConfirm = document.getElementById("auth-confirm");
                const passwordInput = document.getElementById("auth-password");
                const codeWrapper = document.getElementById("auth-totp-wrapper");
                const codeInput = document.getElementById("auth-code");
                let activeForm = null;
                let requireTotp = false;

                const applyIcon = () => {
                    const isDark = html.dataset.theme === "dark";
                    themeIcon.textContent = isDark ? "üåô" : "‚òÄÔ∏è";
                    themeBtn?.setAttribute("aria-pressed", String(isDark));
                };

                themeBtn?.addEventListener("click", () => {
                    const next = html.dataset.theme === "dark" ? "light" : "dark";
                    html.dataset.theme = next;
                    localStorage.setItem("theme", next);
                    applyIcon();
                });
                applyIcon();

                menuBtn?.addEventListener("click", () => {
                    const isOpen = sidebar?.classList.contains("hidden") === false;
                    sidebar?.classList.toggle("hidden", isOpen);
                    menuBtn.setAttribute("aria-expanded", String(!isOpen));
                });

                const openModal = (form) => {
                    activeForm = form;
                    requireTotp = form?.dataset?.auth2fa === "true";
                    codeWrapper?.classList.toggle("hidden", !requireTotp);
                    passwordInput.value = "";
                    if (codeInput) codeInput.value = "";
                    modal?.classList.remove("hidden");
                    passwordInput?.focus();
                };

                const closeModal = () => {
                    modal?.classList.add("hidden");
                    activeForm = null;
                    requireTotp = false;
                };

                const handleConfirm = () => {
                    if (!activeForm) return;
                    const form = activeForm;
                    const pwd = passwordInput.value.trim();
                    const code = codeInput?.value?.trim() || "";
                    if (!pwd) {
                        passwordInput.focus();
                        return;
                    }
                    if (requireTotp && !/^[0-9]{6}$/.test(code)) {
                        codeInput?.focus();
                        return;
                    }

                    let pwdField = form.querySelector('input[name="password"][data-injected="true"]');
                    if (!pwdField) {
                        pwdField = document.createElement("input");
                        pwdField.type = "hidden";
                        pwdField.name = "password";
                        pwdField.setAttribute("data-injected", "true");
                        form.appendChild(pwdField);
                    }
                    pwdField.value = pwd;

                    if (requireTotp) {
                        let codeField = form.querySelector('input[name="code"][data-injected="true"]');
                        if (!codeField) {
                            codeField = document.createElement("input");
                            codeField.type = "hidden";
                            codeField.name = "code";
                            codeField.setAttribute("data-injected", "true");
                            form.appendChild(codeField);
                        }
                        codeField.value = code;
                    }

                    form.dataset.authIgnore = "true";
                    form.submit();
                    setTimeout(() => {
                        delete form.dataset.authIgnore;
                    }, 100);
                    closeModal();
                };

                document.querySelectorAll("form[data-require-auth]").forEach((form) => {
                    form.addEventListener("submit", (ev) => {
                        if (form.dataset.authIgnore === "true") return;
                        ev.preventDefault();
                        openModal(form);
                    });
                });

                modalClose?.addEventListener("click", closeModal);
                modalCancel?.addEventListener("click", closeModal);
                modal?.addEventListener("click", (ev) => {
                    if (ev.target === modal) closeModal();
                });
                modalConfirm?.addEventListener("click", handleConfirm);
                passwordInput?.addEventListener("keydown", (ev) => {
                    if (ev.key === "Enter") {
                        ev.preventDefault();
                        handleConfirm();
                    }
                });
                codeInput?.addEventListener("keydown", (ev) => {
                    if (ev.key === "Enter") {
                        ev.preventDefault();
                        handleConfirm();
                    }
                });
            })();
        </script>
    </body>
</html>
